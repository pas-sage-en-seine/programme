<table class="timetable" id="timetable" aria-live="polite">
	<caption class="timetable__caption">Planning de Pas Sage en Seine 2019</caption>
    <col>
    <colgroup span="2"></colgroup>
    <colgroup span="2"></colgroup>
    <colgroup span="2"></colgroup>
    <colgroup span="2"></colgroup>
	<thead>
	<tr>
		<td rowspan="2"></td>
		<% planning.each.with_index(1) do |(day, locations), i| %>
			<%=
				n = locations.size
				attributes = n == 1 ? nil : { colspan: n }
				label = I18n.l day, format: '%A %d %B'
				content_tag(:th, label, :scope => 'colgroup', :colspan => n == 1 ? nil : n, :data => {:day => i})
			%>
		<% end %>
	</tr>
	<tr>
		<% planning.each.with_index(1) do |(day, locations), i|
			locations.each do |location, _|      %>
			<th scope='col' data-day="<%= i %>">
				<%= case location.to_sym
					when :cinema
						'Salle cinéma'
					when :hall
						'Accueil'
					when :town
						'Village asso'
					when :young
						'Espace jeunesse'
					end
				%>
			</th>
		<% end %>
		<% end %>
	</tr>
	</thead>
	<tbody>
	<%
		(FROM...TO).step(STEP).each do |time| %>
		<tr>
			<%=
				hiddenClass = "visually-hidden" unless time % 60 == 0
				content_tag(:th, content_tag(:span, to_time(time), class: hiddenClass), :scope => 'row')
			%>
			<% columns.each_with_index do |column, index|
				events = column[:events]
				location = column[:location]
				event = events.first
				if event
					from, to, height, placeholder = event.values_at :from, :to, :height, :placeholder
					if from == time
						events = events.delete_at 0
						attributes = {
						    rowspan: height > 1 ? height : nil,
						    "data-col": index
					    }
					%>
				<% unless event[:placeholder]
					   content_tag :td, **attributes do %>
						<% content_tag :article, class: "event #{event[:type]}", :data => { :place => location } do %>
							<div class="time">
								<time datetime="<%= to_time from %>"><%= to_time from %></time> – <time datetime="<%= to_time to %>"><%= to_time to %></time>
							</div>
						  <div class="type">
                  <%= label_type(event[:type]) %>
              </div>
							<div class="title" data-fullTitle="<%= event[:title] %>">
								<%= truncate(event[:title], :length => 40) %>
							</div>
							<div class="author">
								<%= event[:author] %>
							</div>
							<button class="event__toggleBtn" aria-label="Description complète de '<%= event[:title] %>'">
							  +
							</button>
							<div class="description">
								<%=
									description = event[:description]
									markdown.render description if description
								%>
							</div>
						<% end %>
					<% end %>
				<% else %>
					<%= content_tag :td, '', **attributes %>
				<% end %>
			<% end %>
			<% end %>
			<% end %>
		</tr>
	<% end %>
	</tbody>
</table>

